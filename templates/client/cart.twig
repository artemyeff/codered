{% extends 'client/layout/layout.twig' %}
{% block content %}
  <div class="cont-name">Корзина</div>
  {% if cart is not empty %}
    <div class="cont-cart">
      <div class="cart-profile">
        <div class="name-table">
          <div class="table-header">Цена</div>
          <div class="table-header">Количество</div>
          <div class="table-header">Сумма</div>
          <div class="table-header">Удалить</div>
        </div>
        <div style="width: 100%;" id="cart-content">
          {% include 'partials/cart-content.twig' with {'cart': cart} only %}
        </div>
        <div class="cart-anketa1">
          <div class="cart-anketa1_dost">
            <div class="cart-anketa1__dostavka1">1</div>
            <div class="cart-anketa1__dostavka2">Способ доставки</div>
          </div>
          <div class="cart-anketa1__dostavka3">Самовывоз из магазина на Тверской (бесплатно)</div>

        </div>
        <div class="cart-anketa1">
          <div class="cart-anketa1_dost">
            <div class="cart-anketa1__dostavka1">2</div>
            <div class="cart-anketa1__dostavka2">Способ оплаты</div>
          </div>
          <div class="cart-anketa1__dostavka3">Наличными при самовывозе</div>

        </div>

        <div class="cart-anketa1">
          <div class="cart-anketa1_dost">
            <div class="cart-anketa1__dostavka1">3</div>
            <div class="cart-anketa1__dostavka2">Укажите телефон</div>
          </div>
          <div class="cart-anketa1__dostavka4">
            <div class="cart-anketa1-tel">Телефон</div>
            <input type="text" name="phone" id="order-phone">
          </div>
        </div>
        <div class="cart-button" id="order-create">Оформить заказ</div>
      </div>
    </div>
  {% endif %}
{% endblock %}
{% block scripts %}
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/assets/js/cart.js"></script>
{% endblock %}
