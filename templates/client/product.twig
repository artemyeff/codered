{% extends 'client/layout/layout.twig' %}
{% block content %}
  <div class="cont-profile">
    <div class="profile">
      <img src="{{ product.image }}" alt="">
      <div class="profile-info">
        <div class="prof-site">{{ product.name }}</div>
        <div class="prof-name">{{ product.category.name }}</div>
        <div class="prof-price">{{ product.price }} ₽</div>
        <div class="prof-description">
          {{ product.description|raw }}
        </div>
        <div class="button-buy" id="cart-buy" data-product-id="{{ product.id }}">Купить</div>
      </div>
    </div>
  </div>
{% endblock %}
{% block scripts %}
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/assets/js/product.js"></script>
{% endblock %}
